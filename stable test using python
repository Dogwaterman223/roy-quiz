def main():
    print("Welcome to the Roy Evaluation Program!")
    print("1. Option 1 - Roy is a shit mod!")
    print("2. Option 2 - Roy is a good mod.")

    choice = input("Enter your choice (1 or 2): ")

    if choice == "1":
        print("You chose Option 1 - you are based and cool")
    elif choice == "2":
        print("You chose Option 2 - You are either roy or roy are a roy dicksucker")
    else:
        print("Invalid choice. Please enter 1 or 2.")

if __name__ == "__main__":
